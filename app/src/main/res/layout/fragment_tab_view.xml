<android.support.design.widget.TabLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_layout_height"
    android:background="@color/white"
    app:tabGravity="fill"
    app:tabIndicatorHeight="@dimen/space_4"
    app:colorAccent="@color/primary_blue"
    app:tabSelectedTextColor="@color/primary_blue"
    app:tabTextColor="@color/medium_gray"
    app:tabIndicatorColor="@color/primary_blue"
    app:tabMode="fixed"
    style="@style/TabFragment"/>