<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:layout_collapseMode="pin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:background="?selectableItemBackgroundBorderless"
            android:theme="@style/SelectableItemBlack"
            android:gravity="center_vertical"
            android:text="@string/back_icon"
            android:textSize="@dimen/size_24"
            android:textColor="@color/white"
            style="@style/Text.Icon"/>

        <EditText
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/standard_space_small"
            android:background="@null"
            android:textColor="@color/white"
            android:textColorHint="@color/translucent_white"
            android:textCursorDrawable="@null"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/icon_action_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:gravity="center_vertical"
            android:foreground="?selectableItemBackgroundBorderless"
            android:theme="@style/SelectableItemBlack"
            android:text="@string/cancel_icon"
            android:textSize="@dimen/size_24"
            android:textColor="@color/white"
            android:visibility="invisible"
            style="@style/Text.Icon"/>

    </LinearLayout>
</android.support.v7.widget.Toolbar>
