<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tenant_promotion_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tenant_detail_promotion_cell_height"
        android:foreground="?selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/promotion_logo"
            android:layout_width="@dimen/tenant_detail_promotion_cell_height"
            android:layout_height="@dimen/tenant_detail_promotion_cell_height"
            android:layout_gravity="center"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_8">

            <TextView
                android:id="@+id/promotion_title"
                style="@style/Text.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/promotion_date_range"
                style="@style/Text.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/size_14" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/HorizontalDivider" />
</LinearLayout>