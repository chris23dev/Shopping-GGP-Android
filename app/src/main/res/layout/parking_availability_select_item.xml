<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_container"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View style="@style/HorizontalDivider"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/date_container"
                android:layout_width="@dimen/parking_selector_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/divider"
                android:layout_marginRight="@dimen/divider"
                android:background="@color/white"
                android:foreground="?selectableItemBackground"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/header_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_space_small"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/size_10"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/main_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parking_selector_height"
                    android:layout_marginBottom="@dimen/standard_space_small"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/size_24"/>

                <TextView
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parking_selector_height"
                    android:layout_marginBottom="@dimen/standard_space_small"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/size_32"
                    android:visibility="gone"
                    style="@style/Text.Icon"/>

            </LinearLayout>

            <View
                android:id="@+id/shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_2"
                android:layout_gravity="top"
                android:background="@drawable/calendar_picker_shadow"/>

        </FrameLayout>

        <View style="@style/HorizontalDivider"/>

    </LinearLayout>

</FrameLayout>
