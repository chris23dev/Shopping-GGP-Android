<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_opening_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_16"
        android:background="@color/light_gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/now_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_space_screen"
            android:layout_marginBottom="@dimen/standard_space_large"
            style="@style/HomeFeedHeader"/>

        <com.ggp.theclub.view.CustomRecyclerView
            android:id="@+id/store_opening_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:paddingLeft="@dimen/space_16"
            app:paddingRight="@dimen/space_16"
            app:clipToPadding="false"
            app:loadingViewEnabled="true"
            app:layoutOrientation="horizontal"/>

    </LinearLayout>

    <View style="@style/HorizontalDivider"/>
</LinearLayout>