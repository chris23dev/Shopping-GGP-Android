<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_space_small"
        android:gravity="center"
        android:textSize="@dimen/size_16"
        android:visibility="gone"
        style="@style/Text.Regular"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_space_small"
        android:layout_marginBottom="@dimen/standard_space_small"
        android:layout_gravity="center_horizontal"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/space_2"
        app:cardCornerRadius="@dimen/space_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_space_small"
            android:background="@color/blue"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_space_small"
                android:padding="@dimen/space_2"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle"
                android:text="@string/cancel_icon"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/size_16"
                app:backgroundTint="@color/white"
                style="@style/Text.Icon"/>

            <TextView
                android:id="@+id/description_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16"
                style="@style/Text.Regular"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>