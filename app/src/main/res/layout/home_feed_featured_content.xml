<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/featured_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_space_extra_small"
    android:layout_marginBottom="@dimen/standard_space_extra_small"
    android:foreground="?selectableItemBackground"
    android:visibility="gone"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/home_feed_item_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/featured_content_mall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_space_medium"
            style="@style/HomeFeedHeader"/>

        <ImageView
            android:id="@+id/featured_content_logo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/featured_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_space_medium"
            android:textSize="@dimen/size_20"
            style="@style/Text.Regular"/>

        <TextView
            android:id="@+id/featured_content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16"
            style="@style/Text.Light"/>

        <TextView
            android:id="@+id/featured_content_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_space_small"
            android:textSize="@dimen/size_16"
            style="@style/HomeFeedLink"
            android:visibility="gone"/>

    </LinearLayout>
</android.support.v7.widget.CardView>